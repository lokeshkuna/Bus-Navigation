  <body>
    <div id="sidebar" class="sidebar">
      <a href="#" class="closebtn" onclick="closeSidebar()">&times;</a>
      <a href="#">Navigate</a>
      <a href="#">Community</a>
      <a href="./music/index.html" onclick="songs();">Songs</a>
      <a href="/admin" onclick="songs();">Admin</a>
      <a href="/mod" onclick="songs();">Moderator</a>
      <a href="/review" onclick="songs();">Review</a>
    </div>
    <div id="main">
      <button class="openbtn" onclick="openSidebar()">&#9776; Menu</button>

      <div class="container">
        <h1>Track your bus.</h1>
        <button id="showBusesButton">Buses</button>

        <input type="text" id="searchInput" placeholder="Search for a bus..." />
        <button id="searchButton">Search</button>

        <!-- all the fetched buses will render here -->

        <!-- <ul class="cards"></ul> -->
        <ul class="cards">
          <% busesArray.forEach(function(bus) { %>
          <li class="card" data-busid="<%= bus.busId %>">
            <span class="bus-name">Bus: <%= bus.name %></span>
            <span class="bus-route">Route: <%= bus.route %></span>
          </li>
          <% }); %>
        </ul>

