<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bus Information</title>
    <!-- Include Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Include your custom CSS for animated background -->
    <link href="/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Animated background -->
    <div class="animated-background"></div>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">Bus Information</div>
            <div class="card-body">
              <!-- Bus name -->
              <h2 class="card-title" id="busName"><%= bus.name %></h2>
              <!-- Bus route -->
              <p class="card-text" id="busRoute">Route: <%= bus.route %></p>
              <!-- Bus timings -->
              <p class="card-text" id="busTimings">
                Timings: <%= bus.timings %>
              </p>
              <!-- Reviews -->
              <div class="mb-3">
                <h3>Reviews</h3>
                <ul class="list-group" id="busReviews">
                  <% bus.reviews.forEach(review => { %>
                  <li class="list-group-item">
                    Rating: <%= review.rating %>, Review: <%= review.review %>
                  </li>
                  <% }); %>
                </ul>
              </div>
              <!-- Rating -->
              <div class="mb-3">
                <h3>Rating</h3>
                <p id="busRating">Rating: <%= bus.rating %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Include Bootstrap JS and any necessary scripts for animations -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scripts.js"></script>
  </body>
</html>
