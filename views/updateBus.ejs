<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Bus</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <!-- Custom CSS -->
    <style>
      body {
        background-color: #2d3436; /* Dark Gray */
        color: #ffffff; /* White */
        padding-top: 56px; /* Set padding-top to accommodate fixed navbar */
      }

      .navbar {
        background-color: #16a085; /* Turquoise */ /* Change the color of the navbar */
      }

      .navbar-brand {
        color: #ffffff; /* White */
      }

      .card {
        background-color: #f2e8e4; /* Dark Gray */
        color: #2980b9; /* White */
        border: none;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
      }

      .card-header {
        background-color: #2ecc71; /* Emerald Green */
        color: #ffffff;
        border-radius: 10px 10px 0 0;
      }

      .form-group label {
        /* color: #ffffff; White */
        color: #2980b9; /* White */
      }

      .btn-primary {
        background-color: #16a085; /* Turquoise */
        border: none;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Update Bus</a>
      </div>
    </nav>
    <div class="container">
      <div style="height: 1.2rem"></div>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card mt-4">
            <div class="card-header">
              <h5 class="card-title">Update Bus</h5>
            </div>
            <div class="card-body">
              <!-- Bus Update Form -->
              <form action="/update/bus/<%= bus._id %>" method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    value="<%= bus.name %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="route">Route</label>
                  <input
                    type="text"
                    class="form-control"
                    id="route"
                    name="route"
                    value="<%= bus.route %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="timings">Timings</label>
                  <input
                    type="text"
                    class="form-control"
                    id="timings"
                    name="timings"
                    value="<%= bus.timings %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="rating">Rating</label>
                  <input
                    type="number"
                    class="form-control"
                    id="rating"
                    name="rating"
                    min="1"
                    max="5"
                    step="0.1"
                    value="<%= bus.rating %>"
                    required
                  />
                </div>
                <p><%= bus.rating %></p>
                <!-- Reviews -->
                <div class="form-group">
                  <label for="reviews">Reviews</label>
                  <% bus.reviews.forEach(review => { %>
                  <div class="input-group mb-3">
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Review"
                      aria-label="Review"
                      aria-describedby="basic-addon2"
                      name="reviews[]"
                      value="<%= review.review %>"
                    />
                    <div class="input-group-append">
                      <span class="input-group-text">Rating</span>
                      <input
                        type="number"
                        class="form-control"
                        placeholder="Rating"
                        aria-label="Rating"
                        aria-describedby="basic-addon2"
                        name="ratings[]"
                        min="1"
                        max="5"
                        step="0.1"
                        value="<%= review.rating %>"
                      />
                    </div>
                  </div>
                  <% }) %>
                </div>
                <!-- Add other bus fields here -->
                <button type="submit" class="btn btn-primary">
                  Update Bus
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
